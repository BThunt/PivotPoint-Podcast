# PivotPoint Podcast - Environment Variables
# Copy this file to .env and fill in your API keys

# Required API Keys
OPENAI_API_KEY=your-openai-api-key-here
SERPER_API_KEY=your-serper-api-key-here

# Optional API Keys
OPEN_ROUTER=your-openrouter-key-here
ELEVEN_LABS_API_KEY=your-elevenlabs-key-here

# TTS Configuration
TTS_PROVIDER=openai
VOICE_ID=alloy
SPEAKING_SPEED=1.0

# ElevenLabs Configuration (if using ElevenLabs TTS)
ELEVEN_LABS_VOICE_ID=your-voice-id-here
ELEVEN_LABS_MODEL=eleven_multilingual_v2
ELEVEN_LABS_STABILITY=0.5
ELEVEN_LABS_SIMILARITY_BOOST=0.85
ELEVEN_LABS_STYLE=0.0
ELEVEN_LABS_USE_SPEAKER_BOOST=true
ELEVEN_LABS_SPEED=0.9

# Content Settings
MAX_ARTICLES=5
PODCAST_LENGTH_MINUTES=5
AUDIO_FORMAT=mp3
